siq()
{
    [ -f "${2}" ] || return ${?}

    while IFS= read -r STRING; do
        case "${STRING%%\ *}" in
            "${1}") STRING="${STRING#${1}*\"}"
                    echo "${STRING%\"*}"
                    break
            ;;
        esac
    done <"${2}"
}

